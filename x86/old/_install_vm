#Install to USB

#Re-enable as necessary (it will give a warning: ../VM/MOSS-disk-flat.vmdk
#is not a block special device.\nProceed anyway? (y,n) y), to which you respond yes.
#sudo mke2fs ../VM/MOSS-disk-flat.vmdk

sudo mount -t ext2 ../VM/MOSS-disk-flat.vmdk /mnt

sudo mkdir -p /mnt/boot
sudo mkdir -p /mnt/boot/grub

#http://wiki.centos.org/HowTos/GrubInstallation
#Install to MBR, not first partition
sudo grub-install --root-directory=/mnt ../VM/MOSS-disk-flat.vmdk

sudo cp build/MOSS.bin /mnt/boot/MOSS.bin
sudo cp source/menu.lst /mnt/boot/grub/menu.lst

sudo umount /mnt